.cash-list {
  background: #fff;
  border-radius: 8rpx;
  padding: 0 30rpx;
}
.cash-list .title {
  padding: 20rpx 0;
  font-size: 32rpx;
}
.cash-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 156rpx;
  border-bottom: 1rpx solid #ececec;
}
.cash-item:last-child {
  border-bottom: 0;
}
.user-info {
  font-size: 28rpx;
}
.user-info image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.cash-info {
  color: #8e8b8b;
}
.cash-info text {
  font-size: 28rpx;
  color: #f44135;
}
