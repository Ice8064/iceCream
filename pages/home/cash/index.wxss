page {
  background: #f0f0f0;
}
.page {
  padding: 84rpx 20rpx 20rpx;
}
.cash {
  background: #fff;
  position: relative;
  border-radius: 8rpx;
  padding: 84rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
}
.cash .userAvatar {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  top: -60rpx;
  margin-left: -60rpx;
  border-radius: 50%;
}
.expire-text {
  font-size: 40rpx;
  padding: 24rpx 0 20rpx;
}
.count-down {
  padding: 0 0 16rpx;
}
.count-down text {
  width: 17px;
  height: 17px;
  background: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  color: #fff;
}
.count-down label {
  margin: 0 3px;
}
.cashing {
  text-align: center;
  margin-bottom: 40rpx;
}
.cashing text {
  color: #f44135;
}
.cashing .amount {
  font-size: 56rpx;
}
.tip {
  margin: 30rpx 0 10rpx;
  text-align: center;
}
.share-tip {
  color: #8e8b8b;
  text-align: center;
}
.share-tip text {
  margin-left: 30rpx;
}
.share-tip image {
  width: 14rpx;
  height: 22rpx;
}
.assistance-speed {
  width: 100%;
  height: 18rpx;
  background: #ffeada;
  border-radius: 9rpx;
  margin-bottom: 46rpx;
  position: relative;
}
.assistance-speed .bg {
  height: 18rpx;
  background: #fe8524;
  width: 50%;
  border-radius: 9rpx;
}
.assistance-speed .position {
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  background-image: linear-gradient(to right, #fe8425, #ffa216);
  position: absolute;
  color: #fff;
  top: -15rpx;
  left: 0%;
  margin-left: -18rpx;
}
.expire .assistance-speed {
  background: #e8e8e8;
}
.expire .assistance-speed .bg {
  background: #bdbdbd;
}
.expire .assistance-speed .position {
  background-image: linear-gradient(to right, #bdbdbd, #bdbdbd);
}

.friend-list {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 30rpx 10rpx;
}
.friend-list .title {
  padding-bottom: 20rpx;
}
.friend-list-scroll-view {
  height: 215rpx;
}
.friend-item {
  position: relative;
  height: 76rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ececec;
}
.friend-item:last-child {
  border-bottom: 0;
}
.friend-info {
  padding-left: 88rpx;
  width: 340rpx;
}
.friend-info .font-14 {
  margin-bottom: 12rpx;
}
.friend-item image {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
  border-radius: 50%;
}
.friend-item .default-color {
  color: #323030;
}
