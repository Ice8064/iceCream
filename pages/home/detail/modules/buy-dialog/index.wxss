@import "../../../../../static/css/common.wxss";
@import "../../../../../static/css/font.wxss";
/*底部悬浮*/
.buy-action {
  position: fixed;
  width: 100%;
  height: 100rpx;
  display: flex;
  bottom: 0;
  z-index: 2;
  background: #fff;
}
.buy-action .share {
  width: 50%;
  color: #2c2c2c;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.buy-action .share button {
  color: #2c2c2c;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 22rpx;
}
.buy-action .share image {
  width: 52rpx;
  height: 52rpx;
  margin-right: 10rpx;
}
.buy-action .buy-button-wrap {
  width: 50%;
  background: #f44135;
  text-align: center;
  color: #fff;
}
.buy-action .buy-button-wrap .button {
  width: 375rpx;
  line-height: 1.2;
  font-size: 24rpx;
}
/*弹窗*/
.buy-content {
  width: 750rpx;
  background: #fff;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.buy-product-list {
  padding: 30rpx 0;
  display: flex;
  border-bottom: 1rpx solid #ececec;
  position: relative;
}
.buy-product-list .info {
  margin-left: 20rpx;
  position: relative;
  width: 492rpx;
}
.buy-product-list .close {
  color: #c2b9b9;
  position: absolute;
  right: -0rpx;
  top: 30rpx;
  width: 28rpx;
  height: 28rpx;
  z-index: 3;
}
.buy-product-list .close image {
  width: 28rpx;
  height: 28rpx;
}
.buy-product-img {
  width: 176rpx;
  height: 176rpx;
  border-radius: 8rpx;
}
.buy-content .button {
  margin-top: 30rpx;
  width: 100%;
  border-radius: 8rpx;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
}
.buy-content .price {
  margin: 4rpx 0 10rpx;
}
.buy-content .bottom {
  width: 492rpx;
  margin-top: 16rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
