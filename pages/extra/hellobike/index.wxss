.flex-item {
  position: relative;
  height: 100%;
  text-align: center;
}

.top-container image {
  width: 100%;
}

.page-inner {
  background: #2fd499;
}

.green-btn {
  box-shadow: none;
}

.main-container {
  padding: 40rpx 10rpx;
  background-color: white;
}

.bottom-container {
  padding: 0 12rpx;
}

.red-text {
  color: #fc2c4d;
}

.rule {
  margin-top: 40rpx;
}

.prize-list {
  padding: 10rpx 20rpx;
}

.info-list-wrapper {
  position: relative;
  padding-top: 60rpx;
}

.info-item__inner {
  background-color: rgba(0, 0, 0, 0.8);
  height: 60rpx;
  display: inline-block;
  padding: 0 30rpx;
  color: white;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-top-right-radius: 35rpx;
  border-bottom-right-radius: 35rpx;
  position: absolute;
}

.top-list .info-item__inner {
  top: 0rpx;
  left: 0rpx;
}

.bottom-list .info-item__inner {
  top: 80rpx;
  left: 0rpx;
}

.rule image {
  display: block;
  width: 100%;
}

.stats-box {
  font-size: 34rpx;
}

.stats-box .image-container {
  width: 56rpx;
  height: 56rpx;
  border-radius: 56rpx;
  background-color: #f5f8fa;
  display: inline-block;
  position: relative;
  top: 15rpx;
  padding: 8rpx;
  margin-right: 6rpx;
  font-size: 38rpx;
}

.stat-item {
  display: inline-block;
  margin-left: 14rpx;
  margin-right: 30rpx;
}

.stat-item:last-child {
  margin-right: 0;
}

.stats-box image {
  display: block;
  border-radius: 100%;
  width: 100%;
  height: 100%;
}

.prize-list__item {
  margin: 0;
  border-radius: 8rpx;
  padding-top: 30rpx;
  padding-left: 0;
  background-color: #ffffff;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eeeeee;
}

.prize-list__item image {
  display: block;
  width: 100%;
  height: 100%;
}

.prize-list__item .image-container {
  height: 80rpx;
  width: 80rpx;
  background-color: #ffffff;
}

.row {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.shake-item {
  animation: shake 3s cubic-bezier(0.36, 0.07, 0.19, 0.97) infinite;
  transform: translate3d(0, 0, 0);
  backface-visibility: hidden;
  perspective: 1000px;
}

.center-text {
  text-align: center;
}

.flex_box_row_center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.flex_box_column_center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex_box_inline_center {
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.flex_box_inline_between {
  display: inline-flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}

.btn-round--lg {
  border-radius: 80rpx;
}

.grey-btn {
  background: #f8f8f8;
  line-height: 32px;
  color: #b2b2b2;
  text-align: center;
}

.container {
  display: flex;
  flex-direction: column;
}

.right {
  float: right;
}

.left {
  float: left;
}

.clearfix {
  clear: both;
}

.grey-text {
  color: #888888;
}

@keyframes shake {
  11%,
  19% {
    transform: translate3d(-1px, 0, 0);
  }

  12%,
  15% {
    transform: translate3d(2px, 0, 0);
    background-image: linear-gradient(90deg, #fc2c4d 0%, #fd8c88 100%);
  }

  13%,
  15%,
  17% {
    transform: translate3d(-4px, 0, 0);
    background-image: linear-gradient(-135deg, #07bd85 0%, #07bd59 100%);
  }

  14%,
  16% {
    transform: translate3d(4px, 0, 0);
    background-image: linear-gradient(90deg, #fc2c4d 0%, #fd8c88 100%);
  }
}
