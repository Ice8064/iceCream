<view class="page">
  <view class="cash-list">
    <view class="cash-item flex-between line-bottom" wx:for="{{ list }}" wx:key="{{ index }}">
      <view class="left">
        <view class="font-16 ellipsis">{{ item.memo }}</view>
        <view class="gray">{{ item.createTime }}</view>
      </view>
      <view class="right">
        <view class="font-18 red">{{ item.changeNum }}</view>
        <view class="font-14">{{ item.balance }}</view>
      </view>
    </view>
  </view>
 <view class="hermes-data-tip" wx:if="{{ !isLoading && !hasMore && list.length }}">
  没有更多数据啦！
 </view>
 <view class="hermes-data-tip"  wx:if="{{ isLoading }}">
  正在加载中...
 </view>
 <!--没有数据的状态-->
 <empty-list-component show="{{ isLoaded && !list.length }}" imgUrl="https://imgs-1253854453.image.myqcloud.com/123615b0a09f734ee2bcecb948772ba1.png" title="还没有红包~" button="逛一逛" bind:callback="handleToHome"></empty-list-component>
</view>
