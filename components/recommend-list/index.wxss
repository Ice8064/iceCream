.recommed-wrap .title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 116rpx;
}
.title .text {
  font-size: 36rpx;
  position: relative;
}
.title .text::after,
.title .text::before {
  position: absolute;
  content: "";
  width: 60rpx;
  height: 2rpx;
  overflow: hidden;
  background: #d8d8d8;
  top: 50%;
}
.title .text::before {
  left: -80rpx;
}
.title .text::after {
  right: -80rpx;
}
.recommed-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend-item {
  width: 370rpx;
  background: #fff;
  padding-bottom: 10px;
  margin-bottom: 5px;
}
.product-img {
  width: 100%;
  height: 370rpx;
  background: #e2e2e2;
}
.product-name {
  font-size: 28rpx;
  line-height: 1.4;
  margin: 14rpx 16rpx 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 76rpx;
}
.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #8e8b8b;
  margin: 0 16rpx;
}
.product-price {
  color: #f44135;
}
.product-price .price {
  font-size: 36rpx;
  margin-right: 4rpx;
}
.product-price .gain {
  width: 84rpx;
  padding: 0 8rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  border: solid 0.5px #f44135;
  margin-left: 4px;
  position: relative;
  top: -1px;
}
.product-user-amount {
  font-weight: normal;
}

/*显示是否还有数据或者加载中*/
.hermes-data-tip {
  padding: 24rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #8e8b8b;
  background: #f0f0f0;
}
