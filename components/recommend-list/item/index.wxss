.recommend-item {
  width: 370rpx;
  background: #fff;
  padding-bottom: 10px;
  margin-bottom: 5px;
}
.product-img {
  width: 100%;
  height: 370rpx;
}
.product-name {
  font-size: 28rpx;
  line-height: 1.4;
  margin: 14rpx 16rpx 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 76rpx;
}
.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #8e8b8b;
  margin: 0 16rpx;
}
.product-price {
  color: #f44135;
}
.product-price .price {
  font-size: 36rpx;
  margin-right: 4rpx;
}
.product-price .gain {
  width: 84rpx;
  padding: 0 8rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  border: solid 0.5px #f44135;
  margin-left: 4px;
  position: relative;
  top: -1px;
}
.product-user-amount {
  font-weight: normal;
}
