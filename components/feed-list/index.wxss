.feed-item {
  padding: 20rpx;
  border-top: 16rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
}
.feed-item button {
  font-size: 24rpx;
  color: #303231;
  text-align: left;
}
.product-msg {
  width: 410rpx;
  position: relative;
}
.feed-item:last-child {
  border-bottom: 0;
}
.product-img {
  width: 280rpx;
  height: 280rpx;
  border-radius: 8rpx;
  background: url("https://imgs-1253854453.image.myqcloud.com/1e1f64c0db83de1565778f10cf3bb328.png") no-repeat;
  background-size: 100% 100%;
}
.product-name {
  font-size: 32rpx;
  line-height: 1.4;
}
.product-tags {
  display: flex;
  margin-bottom: 14rpx;
}
.product-tags view {
  color: #f05c52;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 0 12rpx;
  background: #fff5f1;
  border-radius: 6rpx;
  margin-right: 8rpx;
}
.product-info {
  width: 100%;
  color: #8e8b8b;
  position: absolute;
  bottom: 0;
}
.product-price {
  color: #6d6b6b;
}
.product-price .dollar {
  color: #f44135;
  font-size: 32rpx;
  font-weight: bold;
}
.product-price .text {
  color: #f44135;
  font-size: 46rpx;
  margin-right: 8rpx;
  font-weight: bold;
}
.product-price .gain {
  color: #f44135;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 0 12rpx;
  background: #fff5f1;
  border-radius: 24rpx 20rpx 20rpx 0;
  position: relative;
  top: -4rpx;
  border: 1rpx solid #f44135;
}
.product-user-amount {
  font-weight: normal;
}
.product-action {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}
.product-buy-num {
  display: flex;
  align-items: center;
}
.product-user-photos {
  margin: 0 10rpx 0 0;
}
.product-user-photos.position {
  margin-right: -6rpx;
}
.product-user-photos image {
  width: 44rpx;
  height: 44rpx;
  border: 1px solid #fff;
  border-radius: 50%;
}
.photos-position {
  position: relative;
  z-index: 1;
  left: -16rpx;
}
.product-action .button {
  width: 140rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f44135;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}
.ellipsis-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
