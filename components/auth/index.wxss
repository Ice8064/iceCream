.hermes-login-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}
.hermes-login-dialog .login-btn {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.hermes-login-dialog .confirm-dialog {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.confirm-dialog .content {
  background: #fff;
  width: 300px;
  border-radius: 10px;
  padding: 30px 35px 10px;
  box-sizing: border-box;
  text-align: center;
}
.confirm-dialog .content .tip-title {
  font-size: 20px;
  font-weight: bold;
}
.confirm-dialog .content .tip-subTitle {
  font-size: 14px;
  margin: 10px 0 18px;
}
.confirm-dialog .content img {
  width: 210px;
  height: 183px;
}
.confirm-dialog .content .confirm-login-btn {
  width: 100%;
  border-radius: 4px;
  height: 44px;
  line-height: 44px;
  text-align: center;
  background-image: -webkit-linear-gradient(330deg, #1eda56, #01c13a);
  color: #fff;
  font-size: 16px;
  margin-top: 32px;
}
.confirm-dialog .content .cancel-btn {
  text-align: center;
  color: #999;
  font-size: 12px;
  padding-top: 10px;
}
