.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.marquee-wrapper {
  position: relative;
}
.top-list .info-item__inner {
  top: 0px;
  left: 0px;
  height: 28px;
  padding-left: 2px;
  padding-right: 10px;
  display: flex;
  align-items: center;
  position: relative;
}
.marquee-item {
  position: fixed;
  top: 20px;
  left: -100%;
  height: 28px;
  z-index: 11;
}

.marquee-item.animation {
  animation: left 3.5s ease-in;
}

@keyframes left {
  0% {
    left: -100%;
  }
  35% {
    left: 12px;
    top: 20px;
    opacity: 1;
  }
  80% {
    left: 12px;
    top: 20px;
    opacity: 1;
  }
  100% {
    left: 12px;
    top: 0px;
    opacity: 0;
  }
}
.marquee-inner {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50px;
  height: 28px;
}

.info-item__inner__img {
  height: 24px;
  width: 24px;
  border-radius: 24px;
  display: inline-block;
  margin-right: 6px;
}

.info-item__inner__content {
  display: inline-block;
  height: 28px;
  max-width: 85vw;
  text-align: left;
  overflow: hidden;
}
.user-name {
  max-width: 100px;
  display: inline-block;
}
.user-action,
.user-name {
  position: relative;
  line-height: 28px;
  height: 100%;
  font-size: 12px;
  font-weight: 200;
  float: left;
  color: rgba(255, 255, 255, 0.9);
}
