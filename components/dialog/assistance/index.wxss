@import "../../../static/css/common.wxss";
@import "../../../static/css/font.wxss";
/*助力弹窗*/
.assistance-dialog {
  width: 620rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}
.assistance-dialog .userAvatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -60rpx;
}
.assistance-dialog .cash {
  padding: 26rpx 0 50rpx;
  text-align: center;
}
.assistance-dialog .cash-amount {
  margin-bottom: 40rpx;
}
.assistance-dialog .cash-doing text {
  color: #f44135;
}
.assistance-dialog .cash-doing .dollar {
  font-size: 36rpx;
}
.assistance-dialog .cash-doing .amount {
  font-size: 56rpx;
}
.number-time {
  padding: 60rpx 0;
  text-align: center;
}
.number-time .tip {
  color: #5e5959;
  margin-top: 30rpx;
}
.assistance-speed {
  width: 100%;
  height: 18rpx;
  background: #ffeada;
  border-radius: 9rpx;
  margin-bottom: 70rpx;
  position: relative;
}
.assistance-speed .bg {
  height: 18rpx;
  background: #fe8524;
  width: 50%;
  border-radius: 9rpx;
}
.assistance-speed .position {
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  background-image: linear-gradient(to right, #fe8425, #ffa216);
  position: absolute;
  color: #fff;
  top: -15rpx;
  left: 0%;
  margin-left: -8rpx;
}
.assistance-dialog .friend-list {
  margin-top: 80rpx;
}
.friend-list .title {
  padding-bottom: 10rpx;
}
.friend-list-scroll-view {
  max-height: 215rpx;
}
.friend-item {
  position: relative;
  height: 76rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ececec;
}
.friend-item:last-child {
  border-bottom: 0;
}
.friend-info {
  padding-left: 88rpx;
}
.friend-info .font-14 {
  margin-bottom: 12rpx;
}
.friend-item image {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
  border-radius: 50%;
}
.friend-item .default-color {
  color: #323030;
}
